<div class="container py-2">
  <div class="row p-0">
    <div class="col-md-8 col-sm-12">
      <div class="card">
        <div class="card-header">Orders</div>
        <div class="card-body">
          <div id="flash_messages"><%= render 'layouts/flash_messages' %></div>
          <div id="orders_container">
            <%= render 'orders/orders' %>
          </div>
          <div class="text-right">
            <%= link_to'New order', new_order_path, class: 'btn btn-green col-12 col-sm-4' %>
          </div>
        </div>
      </div>
    </div>
    <div class=" col-md-4 col-sm-12">
      <div class="card rounded-3">
        <div class="card-header text-center">Actions</div>
        <div class="card-body">
          <div class="actions">
            <a href="javascript:history.back()" class="btn btn-primary col-12">Back</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'misc/ar_delete_modal' %>