<%= form_for @address do |f| %>
  <div class="form-group">
    <%= f.text_field :country, class: "form-control form-control-md rounded-0", autofocus: true, placeholder: "Country" %>
  </div>

  <div class="form-group">
    <%= f.text_field :region, class: "form-control form-control-md rounded-0", autocomplete: "off", placeholder: "Region" %>
  </div>

  <div class="form-group">
    <%= f.text_field :city, class: "form-control form-control-md rounded-0", autocomplete: "off", placeholder: "City" %>
  </div>

  <div class="form-group">
    <%= f.text_field :street, class: "form-control form-control-md rounded-0", autocomplete: "off", placeholder: "Street" %>
  </div>

  <div class="form-group">
    <%= f.text_field :building_number, class: "form-control form-control-md rounded-0", autocomplete: "off", placeholder: "Building number" %>
  </div>

  <div class="form-group">
    <%= f.text_field :apartment_number, class: "form-control form-control-md rounded-0", autocomplete: "off", placeholder: "Apartment number" %>
  </div>

  <%if action_name=="edit" %>
    <%= f.submit "Update", class: "btn btn-success col-12 col-md-6 float-right" %>
  <% else %>
    <%= f.submit "Create", class: "btn btn-success col-12 col-md-6 float-right" %>
  <% end %>
<% end %>