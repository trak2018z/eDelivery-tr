<div class="modal fade ar-delete-modal" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title text-xs-center text-danger">Are you sure?</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer mb-2">
        <div class="text-center col-12">
          <%= button_tag 'Cancel', type: 'button', 'data-dismiss': 'modal', class: 'btn btn-secondary col-12 col-sm-5' %>
          <%= button_to "Delete", '', remote: true, class: "btn btn-red btn-ok col-12", id: 'delete_button', form: {style: 'display:inline-block;', class: 'col-12 col-sm-5 p-0 m-0'}, method: :delete %>

        </div>
      </div>
    </div>
  </div>
</div>