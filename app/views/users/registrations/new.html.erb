<div class="container py-5">
  <div class="row p-0">
    <div class="col-md-7 col-lg-5 mx-auto p-0 px-0">

      <div class="card rounded-0">
        <div class="card-header">
          <h3>Register</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.email_field :email, class: "form-control form-control-md rounded-0", autofocus: true, placeholder: "Email" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, class: "form-control form-control-md rounded-0", autocomplete: "off", placeholder: "Password" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, class: "form-control form-control-md rounded-0", autocomplete: "off", placeholder: "Password confirmation" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", class: "btn btn-success btn-lg float-right col-12 col-sm-6 mb-2"  %>
              <%= render "users/shared/links" %>
            </div>
          <% end %>


        </div>
      </div>
    </div>
  </div>
</div>

