<h5 class="m-3 mt-5"><i class="fa fa-address-book fa-2x" aria-hidden="true"></i> <span>Address book</span></h5>
<ul id="addresses_list" class="list-group">
  <% if current_user.addresses.empty? %>
    <span class="ml-5">Your address book is empty. </span>
  <% end %>
  <% current_user.addresses.each do |address|%>
    <li class="list-group-item p-0 mb-2">
      <div class="inline-element col-12 px-0">
        <div class="inline-element ml-2">
        <small class="text-muted text-center">Country</small>
        <span class="px-0 text-center"><%= address.country %></span>
      </div>
        <span class="float-right" style="font-size: 30%">
          <%= link_to edit_address_path(address), data: {disable_with: '<i class="fa fa-spinner fa-spin fa-lg fa-fw"></i>'}, remote: true, class: 'fa fa-pencil-square-o fa-4x mx-1' do %>

          <% end %>
          <a class='fa fa-times confirm-delete fa-5x mx-1 pointer' data-href="<%=address_path(address)%>" data-toggle="modal" data-target="#confirm-delete"></a>
        </span>
        <hr class="m-0 mb-2"/>
      </div>
      <div class="inline-element col-12 col-sm-2 px-0 mx-0">
        <small class="text-muted block-element">City</small>
        <span class="px-0 block-element"><%= address.city %></span>
      </div>
      <div class="inline-element col-12 col-sm-2 px-0 mx-0">
        <small class="text-muted block-element">Postal code</small>
        <span class="px-0 block-element"><%= address.postal_code %></span>
      </div>
      <div class="inline-element col-12 col-sm-2 px-0 mx-0">
        <small class="text-muted block-element">Street</small>
        <span class="px-0 block-element"><%= address.street %></span>
      </div>
      <div class="inline-element col-12 col-sm-2 px-0 mx-0">
        <small class="text-muted block-element">Building</small>
        <span class="px-0 block-element"><%= address.building_number %></span>
      </div>
      <div class="inline-element col-12 col-sm-2 px-0 mx-0">
        <small class="text-muted block-element">Apartment</small>
        <span class="px-0 block-element"><%= address.apartment_number %></span>
      </div>
    </li>
  <% end %>
</ul>