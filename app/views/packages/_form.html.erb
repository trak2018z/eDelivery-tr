<%= form_for @package, :remote => true do |f| %>
<div>
  <div class="modal-body">
    <div class="form-group invisible-label">
      <%= f.label :weight %>
      <div class="input-group">
        <%= f.number_field :weight, class: "form-control", autocomplete: "off",  min: "0", max: 2000, step: '0.01', pricefor: price_of_package_element[:weight], placeholder: "Weight" %>
        <span class="input-group-addon">kg</span>
      </div>
      <div class="field_with_errors small text-error"></div>
    </div>
    <div class="form-group invisible-label">
      <%= f.label :height %>
      <div class="input-group">
        <%= f.number_field :height, class: "form-control", autocomplete: "off",  min: "0", max: 200, pricefor: price_of_package_element[:height], placeholder: "Height" %>
        <span class="input-group-addon">cm</span>
      </div>
      <div class="field_with_errors small text-error"></div>
    </div>
    <div class="form-group invisible-label">
      <%= f.label :width %>
      <div class="input-group">
        <%= f.number_field :width, class: "form-control", autocomplete: "off",  min: "0", max: 200, pricefor: price_of_package_element[:width], placeholder: "Width" %>
        <span class="input-group-addon">cm</span>
      </div>
      <div class="field_with_errors small text-error"></div>
    </div>
    <div class="form-group invisible-label">
      <%= f.label :length %>
      <div class="input-group">
        <%= f.number_field :length, class: "form-control", autocomplete: "off",  min: "0", max: 200, pricefor: price_of_package_element[:length], placeholder: "Length" %>
        <span class="input-group-addon">cm</span>
      </div>
      <div class="field_with_errors small text-error"></div>
    </div>
  </div>



  <div class="modal-footer mb-2 text-right">
    <div class="form-inline">
      <div class="input-group col-12 col-sm-5 mb-2 px-0">
        <span class="input-group-addon"><%= t('currency.short') %></span>
        <input class="form-control price_modal" id="price_modal" value="0.00" disabled>
      </div>
      <div class="text-right col-12 col-sm-7 pt-0 px-0">
        <%= button_tag 'Cancel', type: 'button', 'data-dismiss': 'modal', class: 'btn btn-gray col-12 col-sm-5' %>
        <%= f.submit "Create", class: "btn btn-green col-12 col-sm-5 btn-create", data: { disable_with: 'Please wait...' } %>
    </div>
    </div>
  </div>
</div>
<% end %>


<div id="pac_template" class="package-input-objects card" hidden>
  <div class="form-inline">
    <div class="title-div col-12 pt-2 ">
      <div class="title text-muted small float-left"></div>
      <button type="button" class="close rm-package pointer" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <hr class="mt-4 pb-0"/>
    </div>
    <div class="package_inputs row pb-3 px-3">
      <div class="col-12 col-sm-4 col-lg-2 pr-0">
        <label class="small text-muted">Weight</label>
        <div class="input-group">
          <input id="package_weight" name="order[packages]" value="0" class="form-control" readonly>
          <span class="input-group-addon p-1">kg</span>
        </div>
      </div>
      <div class="col-12 col-sm-4 col-lg-2 pr-0">
        <label class="small text-muted">Height</label>
        <div class="input-group">
          <input id="package_height" name="order[packages]" value="0" class="form-control" readonly>
          <span class="input-group-addon p-1">cm</span>
        </div>
      </div>
      <div class="col-12 col-sm-4 col-lg-2 pr-0">
        <label class="small text-muted">Width</label>
        <div class="input-group">
          <input id="package_width" name="order[packages]" value="0" class="form-control" readonly>
          <span class="input-group-addon p-1">cm</span>
        </div>
      </div>
      <div class="col-12 col-sm-4 col-lg-2 pr-0">
        <label class="small text-muted">Length</label>
        <div class="input-group">
          <input id="package_length" name="order[packages]" value="0" class="form-control" readonly>
          <span class="input-group-addon p-1">cm</span>
        </div>
      </div>
      <div class="col-12 col-sm-4 col-lg-2 pr-0">
        <label class="small text-muted">Price</label>
        <div class="input-group">
          <input id="price_modal" name="order[packages]" value="0" class="form-control" disabled>
          <span class="input-group-addon p-1"><%= t('currency.short') %></span>
        </div>
      </div>
    </div>
  </div>
</div>